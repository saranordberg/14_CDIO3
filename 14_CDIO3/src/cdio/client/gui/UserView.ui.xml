<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	    .scrollable {
	      height: 400px;
	      width: 250px;
	      border: 1px solid #ccc;
	      text-align: left;
	    }
	    
	    .contactFormCell {
	      padding-left: 20px;
	    }
	  </ui:style>
	
	<g:HTMLPanel>
		<g:VerticalPanel horizontalAlignment="ALIGN_LEFT" styleName="inner" width="200px">
		<g:Cell horizontalAlignment="ALIGN_RIGHT">
				<g:Button ui:field="button" width="200px" height="35px"
					styleName="round_button">New</g:Button>
			</g:Cell>
			<g:Cell width="100%" horizontalAlignment="ALIGN_LEFT">
				<g:VerticalPanel ui:field="content" width="94%" spacing="5" >
				<g:Label ui:field="lbl" text="Loading..." />
			</g:VerticalPanel>
			</g:Cell>
		</g:VerticalPanel>

	</g:HTMLPanel>
</ui:UiBinder> 
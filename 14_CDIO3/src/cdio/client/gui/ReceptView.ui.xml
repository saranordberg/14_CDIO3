<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	    .scrollable {
	      height: 400px;
	      width: 250px;
	      border: 1px solid #ccc;
	      text-align: left;
	    }
	    
	    .contactFormCell {
	      padding-left: 20px;
	    }
	  </ui:style>
	
	<g:HTMLPanel>
		<g:HorizontalPanel width="400px">
			<g:VerticalPanel horizontalAlignment="ALIGN_LEFT" styleName="inner" width="200px" spacing="20">
			<g:Cell horizontalAlignment="ALIGN_RIGHT">
					<g:Button ui:field="newButton" width="200px" height="35px"
						styleName="round_button">Ny recept</g:Button>
				</g:Cell>
				<g:Cell width="100%" horizontalAlignment="ALIGN_LEFT">
					<g:VerticalPanel ui:field="content" width="100%" spacing="0" >
					<g:Label ui:field="lbl" text="Loading..." />
				</g:VerticalPanel>
				</g:Cell>
			</g:VerticalPanel>
			
			<g:VerticalPanel horizontalAlignment="ALIGN_LEFT" styleName="inner2" width="200px" spacing="0">
				<g:Cell width="100%" horizontalAlignment="ALIGN_CENTER">
					<g:Label ui:field="receptIdLabel" width="90%" horizontalAlignment="ALIGN_LEFT" >Recept ID:</g:Label>
				</g:Cell>
				<g:Cell width="100%" horizontalAlignment="ALIGN_CENTER">
					<g:TextBox readOnly="true"  ui:field="receptId" width="90%"></g:TextBox>
				</g:Cell>
				
				<g:Cell width="100%" horizontalAlignment="ALIGN_CENTER">
					<g:Label ui:field="recept_navnLabel" width="90%" horizontalAlignment="ALIGN_LEFT">Recept Navn:</g:Label>
				</g:Cell>
				<g:Cell width="100%" horizontalAlignment="ALIGN_CENTER">
					<g:TextBox ui:field="recept_navn" width="90%"/>
				</g:Cell>
				
				
				<g:Cell width="100%" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_BOTTOM">
					<g:Button ui:field="actionButton" width="190px" height="35px" styleName="rect_button">Opret</g:Button>
				</g:Cell>
			</g:VerticalPanel>
			<g:VerticalPanel ui:field="receptKomponentPanel" horizontalAlignment="ALIGN_LEFT" styleName="inner2" width="200px" spacing="0">

			</g:VerticalPanel>
			<g:VerticalPanel ui:field="addRaavarePanel" horizontalAlignment="ALIGN_LEFT" styleName="inner2" width="200px" spacing="20">
				<g:Cell width="100%" horizontalAlignment="ALIGN_CENTER">
					<g:Button ui:field="addMaterialButton" width="200px" height="35px"
						styleName="round_button">Tilføj råvare</g:Button>
				</g:Cell>
			</g:VerticalPanel>
		</g:HorizontalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 
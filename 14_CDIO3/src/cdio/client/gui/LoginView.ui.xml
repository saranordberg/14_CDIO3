<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.thirdparty.guava.common.collect">
	<ui:style>
	</ui:style>

	<g:HTMLPanel>
		<g:VerticalPanel width="100%" height="100%" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE" styleName="outer">
			<g:VerticalPanel width="210px" styleName="inner" height="185px">
				<g:Cell width="100%" horizontalAlignment="ALIGN_CENTER">
					<g:Label ui:field="id_lbl" width="90%" horizontalAlignment="ALIGN_LEFT" >User ID:</g:Label>
				</g:Cell>
				<g:Cell width="100%" horizontalAlignment="ALIGN_CENTER">
					<g:TextBox ui:field="userID" width="90%"></g:TextBox>
				</g:Cell>
				<g:Cell width="100%" horizontalAlignment="ALIGN_CENTER">
					<g:Label ui:field="password_lbl" width="90%" horizontalAlignment="ALIGN_LEFT">Password:</g:Label>
				</g:Cell>
				<g:Cell width="100%" horizontalAlignment="ALIGN_CENTER">
					<g:TextBox ui:field="password" width="90%"/>
				</g:Cell>
				<g:Cell width="100%" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_BOTTOM">
					<g:Button ui:field="loginButton" width="100px" height="40px" styleName="rect_button">Log in</g:Button>
				</g:Cell>
			</g:VerticalPanel>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 